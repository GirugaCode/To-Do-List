<!-- views/todos-show.handlebars -->

<a href="/">Back to Home</a>
<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <h1>{{todo.title}}</h1>
    <p>{{todo.description}}</p>
    <p><a href="/todos/{{todo._id}}/edit">Edit</a></p>
    <p><form method="POST" action="/todos/{{todo._id}}?_method=DELETE">
        <button class="btn btn-primary" type="submit">Delete</button>
    </form></p>
    <hr>

    <!-- Activity form -->
    {{> activity-form}}

    </hr>

    <!-- Show Activities -->
    {{#each activities}}
      {{> activity}}
    {{/each}}

  </div>
</div>
