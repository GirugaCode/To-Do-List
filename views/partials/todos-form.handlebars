<!-- views/partials/todos-form.handlebars -->

<fieldset>
  <legend>Add To-dos</legend>
  <!-- TITLE -->
  <div class="form-group">
    <label for="todo-title">What is your task?</label><br>
    <input class="form-control" id="todo-title" type="text" name="title" value="{{todo.title}}"/>
  </div>

  <!-- DESCRIPTION -->
  <div class="form-group">
    <label for="todo-description">Give more information about it</label><br>
    <textarea class="form-control" id="todo-description" name="description" rows="10" />{{todo.description}}</textarea>
  </div>
</fieldset>
