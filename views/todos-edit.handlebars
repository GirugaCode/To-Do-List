<!-- views/todos-edit.handlebars -->

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <form method="POST" action="/todos/{{todo._id}}?_method=PUT">
      {{> todos-form}}
      <!-- BUTTON -->
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Save To-Dos</button>
      </div>
      <!-- CANCEL -->
      <div class="form-group">
        <button><a href="/">Cancel</a></button>
      </div>
    </form>
  </div>
</div>
